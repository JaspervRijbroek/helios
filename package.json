{
    "name": "@jaspervrijbroek/helios",
    "description": "A need for speed world server emulator",
    "license": "MIT",
    "version": "1.2.0",
    "type": "commonjs",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "dependencies": {
        "@prisma/client": "3.15.2",
        "@types/bcrypt": "5.0.0",
        "@types/debug": "4.1.7",
        "@types/express": "4.17.13",
        "@types/glob": "7.2.0",
        "@types/node": "16.11.43",
        "@types/passport": "^1.0.9",
        "@types/pidusage": "2.0.2",
        "@types/uuid": "8.3.4",
        "@types/xml2json": "0.11.4",
        "@types/xmpp__jid": "1.3.3",
        "@types/xmpp__xml": "0.13.1",
        "@xmpp/jid": "0.13.1",
        "@xmpp/xml": "0.13.1",
        "bcrypt": "5.0.1",
        "boxen": "7.0.0",
        "chalk": "5.0.1",
        "debug": "4.3.4",
        "dotenv": "16.0.1",
        "express": "4.18.1",
        "figlet": "1.5.2",
        "glob": "8.0.3",
        "js2xmlparser": "4.0.2",
        "passport": "^0.6.0",
        "pidusage": "3.0.0",
        "prisma": "4.0.0",
        "reflect-metadata": "0.1.13",
        "ts-node": "10.8.2",
        "tslint": "6.1.3",
        "typescript": "4.7.4",
        "uuid": "8.3.2",
        "xml2json": "0.12.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.0.3",
        "@commitlint/config-conventional": "17.0.3",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.5",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "commitlint": "17.0.3",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "nodemon": "2.0.19",
        "prettier": "2.7.1",
        "semantic-release": "19.0.3",
        "semantic-release-cli": "5.4.4"
    },
    "engines": {
        "node": "^16.0.0"
    },
    "scripts": {
        "start": "ts-node --files index.ts",
        "dev": "nodemon",
        "test": "jest",
        "prepare": "husky install"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            ".git",
            "node_modules"
        ],
        "env": {
            "DEBUG": "nfsw:*"
        },
        "exec": "./node_modules/.bin/ts-node --files index.ts",
        "watch": [
            "./lib/**/*.ts",
            "./servers/**/*.ts",
            "./bin/**/*",
            "./index.ts"
        ],
        "ext": "ts"
    },
    "prisma": {
        "seed": "ts-node ./prisma/seed.ts"
    },
    "lint-staged": {
        "(servers|lib)/**/*.(ts|json)": "prettier --write"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "body-max-line-length": [
                2,
                "always",
                "Infinity"
            ]
        }
    },
    "release": {
        "branches": [
            "master"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/github",
            "@semantic-release/npm",
            "@semantic-release/git"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "semi": true
    }
}
