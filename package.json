{
    "name": "helios",
    "description": "A need for speed world server emulator",
    "dependencies": {
        "@types/bookshelf": "^1.2.1",
        "@types/buffer-crc32": "^0.2.0",
        "@types/knex": "^0.16.1",
        "@types/mkdirp": "^1.0.1",
        "@types/xmpp__xml": "^0.6.1",
        "@xmpp/xml": "^0.12.0",
        "bookshelf": "^1.2.0",
        "buffer-crc32": "^0.2.13",
        "chalk": "^4.1.0",
        "debug": "^4.3.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "glob": "^7.1.6",
        "js2xmlparser": "^4.0.1",
        "jsontoxml": "^1.0.1",
        "knex": "^0.21.16",
        "mkdirp": "^1.0.4",
        "mysql2": "^2.2.5",
        "reflect-metadata": "^0.1.13",
        "xml2json": "^0.12.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/express": "^4.17.9",
        "@types/glob": "^7.1.3",
        "@types/jsontoxml": "^1.0.1",
        "@types/node": "^14.14.19",
        "@types/xml2json": "^0.11.3",
        "nodemon": "^2.0.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "start": "ts-node index.ts",
        "dev": "nodemon",
        "knex": "node --require ts-node/register ./node_modules/knex/bin/cli.js"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            ".git",
            "node_modules"
        ],
        "env": {
            "DEBUG": "nfsw:*"
        },
        "exec": "./node_modules/.bin/ts-node index.ts",
        "watch": [
            "./index.ts",
            "./tmp.ts",
            "./servers/**/*",
            "./lib/**/*"
        ],
        "ext": "ts"
    }
}
